{
  "dataset": {
    "root_dir": "data/",
    "train_dir": "train/",
    "val_dir": "validation/",
    "test_dir": "test/",
    "clean_dir": "clean",
    "noisy_dir": "noisy",
    "enhanced_dir": "enhanced/"
  },

  "transform": {
    "class": "MelSpectrogram",
    "args": {
      "n_fft": 256,
      "hop_length": 128,
      "center": false
    }
  },

  "models": {

    "ann": {
      "class": "ANN",
      "wrapper": "ANN_Wrapper",
      "args": {
        "output_dim": 1,
        "n_hidden": 2,
        "units_list": [32, 64]
      }
    },

    "lstm": {
      "class": "LSTM",
      "wrapper": "LSTM_Wrapper",
      "args": {
        "n_recurrent": 2,
        "hidden_size": 32,
        "dropout": 0,
        "bidirectional": true
      }
    },

    "gru": {
      "class": "GRU",
      "wrapper": "GRU_Wrapper",
      "args": {
        "n_recurrent": 2,
        "hidden_size": 32,
        "dropout": 0,
        "bidirectional": true
      }
    },

    "reinforce": {
      "class": "REINFORCE",
      "wrapper": "REINFORCE_Wrapper",
      "args": {
        "output_dim": 1,
        "discount": 1
      }
    },

    "dqn": {
      "class": "DQN",
      "wrapper": "DQN_Wrapper",
      "args": {
        "output_dim": 2,
        "replay_buffer_size": 50000,
        "update_steps": 2000,
        "discount": 1
      }
    }
  },

  "optimizer": {
    "class": "Adam",
    "args": {
      "lr": 0.001,
      "weight_decay": 0
    }
  },

  "lr_scheduler": {
    "class": "StepLR",
    "args": {
      "step_size": 50,
      "gamma": 0.1
    }
  },

  "trainer": {
    "epochs": 200,
    "validation_interval": 5,

    "save_dir": "pretrained/",
    "save_period": 2,

    "tensorboard": true,
    "log_dir": "logs/"
  }
}